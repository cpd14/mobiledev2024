<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.edu.usth.weather.ForecastFragment">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:background="#364D9D"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/item1"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/usth_weather" />

        <View
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/divider" />

        <Button
            android:id="@+id/ReloadButton1"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:background="@drawable/reloadbutton"/>

        <View
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/divider" />

        <Button
            android:id="@+id/Settingbutton1"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:background="@drawable/settingbutton" />


    </LinearLayout>


</FrameLayout>